<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/swipeRefresh"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.DashboardFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Card tá»•ng quan cÃ¢n náº·ng - vá»›i icon vÃ  mÃ u ná»n -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="8dp"
                app:cardBackgroundColor="@color/card_weight_bg"
                app:strokeWidth="0dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp">

                    <ImageView
                        android:id="@+id/iconWeight"
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:src="@android:drawable/ic_menu_myplaces"
                        android:background="@drawable/ic_background_circle"
                        android:padding="12dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:tint="@color/primary" />

                    <TextView
                        android:id="@+id/labelWeight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/dashboard_weight_label"
                        android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                        android:textColor="@color/text_secondary"
                        app:layout_constraintStart_toEndOf="@id/iconWeight"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginStart="16dp" />

                    <TextView
                        android:id="@+id/textCurrentWeight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-- kg"
                        android:textAppearance="@style/TextAppearance.Material3.HeadlineLarge"
                        android:textStyle="bold"
                        android:textColor="@color/primary"
                        app:layout_constraintStart_toEndOf="@id/iconWeight"
                        app:layout_constraintTop_toBottomOf="@id/labelWeight"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="8dp" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Card BMI - vá»›i icon vÃ  mÃ u ná»n -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="8dp"
                app:cardBackgroundColor="@color/card_bmi_bg"
                app:strokeWidth="0dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp">

                    <ImageView
                        android:id="@+id/iconBmi"
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:src="@android:drawable/ic_menu_view"
                        android:background="@drawable/ic_background_circle"
                        android:padding="12dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:tint="#2196F3" />

                    <TextView
                        android:id="@+id/labelBmi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/dashboard_bmi_label"
                        android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                        android:textColor="@color/text_secondary"
                        app:layout_constraintStart_toEndOf="@id/iconBmi"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginStart="16dp" />

                    <TextView
                        android:id="@+id/textBmi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="--"
                        android:textAppearance="@style/TextAppearance.Material3.HeadlineLarge"
                        android:textStyle="bold"
                        android:textColor="#2196F3"
                        app:layout_constraintStart_toEndOf="@id/iconBmi"
                        app:layout_constraintTop_toBottomOf="@id/labelBmi"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="8dp" />

                    <TextView
                        android:id="@+id/textBmiStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                        android:textColor="@color/text_secondary"
                        android:visibility="gone"
                        app:layout_constraintStart_toEndOf="@id/iconBmi"
                        app:layout_constraintTop_toBottomOf="@id/textBmi"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="4dp" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Card calories hÃ´m nay - vá»›i progress bar -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="8dp"
                app:cardBackgroundColor="@color/card_calories_bg"
                app:strokeWidth="0dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp">

                    <ImageView
                        android:id="@+id/iconCalories"
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:src="@android:drawable/ic_menu_compass"
                        android:background="@drawable/ic_background_circle"
                        android:padding="12dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:tint="@color/accent" />

                    <TextView
                        android:id="@+id/labelCalories"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/dashboard_calories_label"
                        android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                        android:textColor="@color/text_secondary"
                        app:layout_constraintStart_toEndOf="@id/iconCalories"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginStart="16dp" />

                    <TextView
                        android:id="@+id/textCalories"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-- kcal"
                        android:textAppearance="@style/TextAppearance.Material3.HeadlineLarge"
                        android:textStyle="bold"
                        android:textColor="@color/accent"
                        app:layout_constraintStart_toEndOf="@id/iconCalories"
                        app:layout_constraintTop_toBottomOf="@id/labelCalories"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="8dp" />

                    <ProgressBar
                        android:id="@+id/progressCalories"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="0dp"
                        android:layout_height="8dp"
                        android:progressTint="@color/accent"
                        android:max="100"
                        android:progress="0"
                        android:visibility="gone"
                        app:layout_constraintStart_toEndOf="@id/iconCalories"
                        app:layout_constraintTop_toBottomOf="@id/textCalories"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="12dp" />

                    <TextView
                        android:id="@+id/textCaloriesGoal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                        android:textColor="@color/text_secondary"
                        android:visibility="gone"
                        app:layout_constraintStart_toEndOf="@id/iconCalories"
                        app:layout_constraintTop_toBottomOf="@id/progressCalories"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="4dp" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonUpdateMeasurement"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/measurement_update_button"
                android:layout_marginBottom="16dp"
                style="@style/Widget.Material3.Button.OutlinedButton" />

            <!-- AI Weight Prediction Chart -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardWeightPrediction"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="#F3E5F5">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="ðŸ¤– AI Dá»± Ä‘oÃ¡n cÃ¢n náº·ng (7 ngÃ y)"
                            android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/textPredictionTrend"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸ“ˆ TÄƒng"
                            android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                            android:textStyle="bold"
                            android:textColor="#E91E63"
                            android:padding="4dp" />
                    </LinearLayout>

                    <com.github.mikephil.charting.charts.LineChart
                        android:id="@+id/chartWeightPrediction"
                        android:layout_width="match_parent"
                        android:layout_height="250dp" />

                    <TextView
                        android:id="@+id/textPredictionInsights"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Loading AI insights..."
                        android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                        android:lineSpacingExtra="4dp"
                        android:layout_marginTop="12dp"
                        android:padding="12dp"
                        android:background="@android:color/white"
                        android:textColor="#424242" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Weight Trend Chart -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardWeightChart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Xu hÆ°á»›ng cÃ¢n náº·ng (7 ngÃ y)"
                        android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                        android:textStyle="bold"
                        android:layout_marginBottom="12dp" />

                    <com.github.mikephil.charting.charts.LineChart
                        android:id="@+id/chartWeight"
                        android:layout_width="match_parent"
                        android:layout_height="200dp" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Calories Chart -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardCaloriesChart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Calories intake (7 ngÃ y)"
                        android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                        android:textStyle="bold"
                        android:layout_marginBottom="12dp" />

                    <com.github.mikephil.charting.charts.BarChart
                        android:id="@+id/chartCalories"
                        android:layout_width="match_parent"
                        android:layout_height="200dp" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Trend Insight Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardTrendInsight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="#E3F2FD">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ’¡ Insight"
                        android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/textInsight"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Loading insights..."
                        android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                        android:lineSpacingExtra="4dp" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Error message -->
            <TextView
                android:id="@+id/textError"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/holo_red_dark"
                android:visibility="gone"
                android:text="CÃ³ lá»—i xáº£y ra"
                android:padding="16dp"
                android:background="@android:drawable/dialog_holo_light_frame"
                android:layout_marginTop="8dp" />

            <!-- Loading indicator -->
            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:visibility="gone"
                android:layout_marginTop="24dp" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
