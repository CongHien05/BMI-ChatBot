<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient_subtle"
    android:fillViewport="true"
    tools:context=".ui.main.log.FoodLogFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Header Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="24dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ½ï¸ Ghi láº¡i bá»¯a Äƒn"
                        android:textAppearance="@style/TextAppearance.Material3.HeadlineMedium"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:letterSpacing="0.02" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Theo dÃµi dinh dÆ°á»¡ng hÃ ng ngÃ y cá»§a báº¡n"
                        android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                        android:textColor="@color/text_secondary"
                        android:layout_marginTop="4dp" />
                </LinearLayout>

                <!-- Action buttons -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    
                    <!-- History button -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/buttonHistory"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ“‹"
                        style="@style/Widget.Material3.Button.TextButton"
                        android:textSize="20sp"
                        android:minWidth="0dp"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp"
                        android:contentDescription="Xem lá»‹ch sá»­"
                        app:icon="@android:drawable/ic_menu_recent_history"
                        app:iconTint="?attr/colorPrimary"
                        app:iconGravity="textStart"
                        android:layout_marginEnd="8dp" />
                    
                    <!-- Toggle Favorites Button -->
                    <com.google.android.material.chip.Chip
                        android:id="@+id/buttonToggleFavorites"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="â­ YÃªu thÃ­ch"
                        android:textSize="13sp"
                        style="@style/Widget.Material3.Chip.Filter"
                        app:chipBackgroundColor="@color/chip_background_food"
                        app:chipStrokeColor="@color/gradient_start_food"
                        app:chipStrokeWidth="1dp"
                        android:textColor="@color/gradient_start_food"
                        app:chipIcon="@android:drawable/btn_star_big_off"
                        app:chipIconTint="@color/gradient_start_food"
                        android:checkable="false" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <!-- Favorites RecyclerView (hidden by default) -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardFavorites"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@color/white"
            android:visibility="gone">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerFavorites"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:nestedScrollingEnabled="false" />
        </com.google.android.material.card.MaterialCardView>

        <!-- AI Recommendations Section - Moved to TOP -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardRecommendations"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="?attr/colorSurfaceVariant"
            app:strokeWidth="0dp"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_sparkle_24"
                        android:layout_marginEnd="8dp"
                        android:contentDescription="Sparkle icon" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Gá»£i Ã½ mÃ³n Äƒn cho báº¡n"
                        android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                        android:textStyle="bold" />
                </LinearLayout>

                <TextView
                    android:id="@+id/textRecommendationExplanation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Äang táº£i gá»£i Ã½..."
                    android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                    android:textColor="@color/text_secondary"
                    android:layout_marginBottom="12dp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerRecommendations"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/buttonShowMoreRecommendations"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="Xem thÃªm"
                    style="@style/Widget.Material3.Button.TextButton"
                    android:textColor="?attr/colorPrimary"
                    android:visibility="gone" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Form Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardForm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="24dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="@color/white"
            app:strokeWidth="1dp"
            app:strokeColor="#E0E0E0"
            android:layout_marginBottom="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Label for Food search -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TÃ¬m kiáº¿m mÃ³n Äƒn"
                    android:textAppearance="@style/TextAppearance.Material3.LabelLarge"
                    android:textColor="@color/text_secondary"
                    android:layout_marginBottom="8dp" />

                <!-- Food selection with search - Filled style -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:startIconDrawable="@drawable/ic_search_24"
                    app:startIconTint="@color/gradient_start_food"
                    app:endIconMode="clear_text"
                    app:helperText="GÃµ tÃªn mÃ³n Äƒn Ä‘á»ƒ tÃ¬m kiáº¿m nhanh"
                    app:helperTextEnabled="true"
                    app:boxBackgroundMode="filled"
                    app:boxBackgroundColor="#FAFAFA"
                    app:boxCornerRadiusTopStart="16dp"
                    app:boxCornerRadiusTopEnd="16dp"
                    app:boxCornerRadiusBottomStart="16dp"
                    app:boxCornerRadiusBottomEnd="16dp"
                    app:boxStrokeWidth="1dp"
                    app:boxStrokeColor="#E0E0E0"
                    app:boxStrokeWidthFocused="2dp"
                    app:hintEnabled="false"
                    android:layout_marginBottom="16dp"
                    style="@style/Widget.Material3.TextInputLayout.FilledBox">

                    <com.google.android.material.textfield.MaterialAutoCompleteTextView
                        android:id="@+id/autoCompleteFood"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:completionThreshold="1"
                        android:textColor="@color/text_primary"
                        android:textSize="16sp"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:paddingTop="16dp"
                        android:paddingBottom="16dp"
                        android:minHeight="56dp"
                        android:background="@android:color/transparent" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Label for Quantity -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sá»‘ lÆ°á»£ng"
                    android:textAppearance="@style/TextAppearance.Material3.LabelLarge"
                    android:textColor="@color/text_secondary"
                    android:layout_marginBottom="8dp" />

                <!-- Quantity input - Filled style -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:startIconDrawable="@android:drawable/ic_menu_sort_by_size"
                    app:startIconTint="@color/gradient_start_food"
                    app:suffixText="gram"
                    app:suffixTextColor="@color/gradient_start_food"
                    app:boxBackgroundMode="filled"
                    app:boxBackgroundColor="#FAFAFA"
                    app:boxCornerRadiusTopStart="16dp"
                    app:boxCornerRadiusTopEnd="16dp"
                    app:boxCornerRadiusBottomStart="16dp"
                    app:boxCornerRadiusBottomEnd="16dp"
                    app:boxStrokeWidth="1dp"
                    app:boxStrokeColor="#E0E0E0"
                    app:boxStrokeWidthFocused="2dp"
                    app:hintEnabled="false"
                    android:layout_marginBottom="8dp"
                    style="@style/Widget.Material3.TextInputLayout.FilledBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editTextQuantity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="numberDecimal"
                        android:textColor="@color/text_primary"
                        android:textSize="16sp"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:paddingTop="16dp"
                        android:paddingBottom="16dp"
                        android:minHeight="56dp"
                        android:background="@android:color/transparent" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Calories Display (Realtime) -->
                <LinearLayout
                    android:id="@+id/layoutCaloriesInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:background="@drawable/bg_calories_info"
                    android:layout_marginBottom="16dp"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@android:drawable/ic_menu_info_details"
                        app:tint="@color/gradient_start_food"
                        android:layout_marginEnd="8dp"
                        android:contentDescription="Calories icon" />

                    <TextView
                        android:id="@+id/textCaloriesInfo"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Tá»•ng calories: 0 kcal"
                        android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                        android:textStyle="bold"
                        android:textColor="@color/gradient_start_food" />
                </LinearLayout>

                <!-- Meal type selection - ChipGroup -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bá»¯a Äƒn"
                    android:textAppearance="@style/TextAppearance.Material3.LabelLarge"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="8dp" />

                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/chipGroupMealType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:singleSelection="true"
                    app:checkedChip="@id/chipBreakfast"
                    android:layout_marginBottom="8dp">

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipBreakfast"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SÃ¡ng"
                        android:checkable="true"
                        style="@style/Widget.Material3.Chip.Filter" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipLunch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TrÆ°a"
                        android:checkable="true"
                        style="@style/Widget.Material3.Chip.Filter" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipDinner"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tá»‘i"
                        android:checkable="true"
                        style="@style/Widget.Material3.Chip.Filter" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipSnack"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Xáº¿"
                        android:checkable="true"
                        style="@style/Widget.Material3.Chip.Filter" />

                </com.google.android.material.chip.ChipGroup>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Submit button - Gradient style -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonLogFood"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Ghi láº¡i bá»¯a Äƒn"
            android:textAllCaps="false"
            android:textSize="17sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:background="@drawable/bg_button_ripple_food"
            android:elevation="8dp"
            android:stateListAnimator="@null"
            app:icon="@android:drawable/ic_menu_save"
            app:iconGravity="textStart"
            app:iconTint="@color/white"
            android:layout_marginBottom="16dp"
            style="@style/Widget.Material3.Button" />

        <!-- Progress indicator -->
        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:visibility="gone" />

    </LinearLayout>

</androidx.core.widget.NestedScrollView>
